{
  "schemaVersion": "0.1",
  "fields": [
    {"name": "first"},
    {"name": "last"},
    {"name": "full"}
  ],
  "rules": [
    {
      "constraints": [
        {
          "allOf": [
            {"field": "first", "is": "ofType", "value": "firstname"},
            {"field": "last", "is": "ofType", "value": "surname"},
            {"field": "full", "is":  "ofType", "value": "fullname"},
            {"field": "full", "is":  "hasFirstName", "value": "firstname"},
            {"field": "full", "is":  "hasLastName", "value": "surname"}
          ]
        }
      ]
    }
  ]
}
