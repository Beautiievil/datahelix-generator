{
  "schemaVersion": "0.1",
  "fields": [
    {"name": "forename"},
    {"name": "surname"},
    {"name": "fullname"}
  ],
  "rules": [
    {
      "constraints": [
        {
          "allOf": [
            {"field": "forename", "is": "aTypical", "value": "firstname"},
            {"field": "surname", "is": "aTypical", "value": "lastname"},
            {"field": "fullname", "is":  "aTypical", "value":  "fullname"},
            { "not": { "field": "forename", "is": "null" }},
            { "not": { "field":  "surname", "is":  "null"}},
            { "not": { "field":  "fullname", "is":  "null"}}
          ]
        }
      ]
    }
  ]
}